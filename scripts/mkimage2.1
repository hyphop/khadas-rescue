#!/bin/bash

## hyphop ##

#= mkimage wrapper
#= zero time recalc crc32

OUT=
for v in $@; do
    OUT=$v
done

echo "[i] MKIMAGE OUT: $OUT">&2

mkimage $@ || exit 1

## replace crc32 and time
dd if=/dev/zero bs=4 seek=1 count=2 conv=fsync,notrunc of=$OUT 2>/dev/null
