#printf "%b" "\x$h4\x$h3\x$h2\x$h1" | dd bs=4 seek=1 count=1 conv=fsync,notrunc of=$OUT 2>/dev/null

dd if=$OUT bs=64 count=1 2>/dev/null | \
    gzip -1 -c | tail -c8 | head -c4 | \
    dd bs=4 seek=1 count=1 conv=fsync,notrunc of=$OUT

exit 0

